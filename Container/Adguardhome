podman run -d \
    --network dns \
    --restart always \
    --name adguardhome \
    -v /mnt/data/AdguardHome-Workdir:/opt/adguardhome/work \
    -v /mnt/data/AdguardHome-Confdir:/opt/adguardhome/conf \
    -p 53:53/tcp -p 53:53/udp \
    -p 81:80/tcp -p 3000:3000/tcp \
    -p 67:67/udp -p 68:68/tcp -p 68:68/udp \
    -p 444:443/tcp \
    -p 853:853/tcp \
    -d adguard/adguardhome:latest
